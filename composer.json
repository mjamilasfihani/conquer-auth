{
    "name": "mjamilasfihani/conquer-auth",
    "description": "An authentication library for CodeIgniter4",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "codeigniter",
        "authentication",
        "authorization"
    ],
    "authors": [
        {
            "name": "Mohammad Jamil Asfihani",
            "email": "mohammadjamilasfihani@gmail.com",
            "homepage": "https://github.com/mjamilasfihani",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/mjamilasfihani/conquer-auth",
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "codeigniter4/devkit": "^1.1",
        "codeigniter4/framework": "^4.2",
        "qossmic/deptrac-shim": "^0.24.0"
    },
    "provide": {
        "codeigniter4/authentication-implementation": "1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Conquer\\Auth\\": "src/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true
    },
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer fix --verbose --ansi --using-cache=no --diff",
        "sniff": "vendor/bin/php-cs-fixer fix --verbose --ansi --dry-run --using-cache=no --diff",
        "test": [
            "vendor/bin/phpunit --verbose --coverage-text",
            "vendor/bin/phpstan analyze",
            "vendor/bin/deptrac analyze --cache-file=build/deptrac.cache"
        ]
    }
}
