{
    "name": "mjamilasfihani/conquer-auth",
    "description": "An authentication library for CodeIgniter4",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "codeigniter",
        "authentication",
        "authorization"
    ],
    "authors": [
        {
            "name": "Mohammad Jamil Asfihani",
            "email": "mohammadjamilasfihani@gmail.com",
            "homepage": "https://github.com/mjamilasfihani",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/mjamilasfihani/conquer-auth",
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "codeigniter4/devkit": "^1.1",
        "codeigniter4/framework": "^4.2",
        "ergebnis/composer-normalize": "^2.28"
    },
    "provide": {
        "codeigniter4/authentication-implementation": "1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Conquer\\Auth\\": "src/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true
    },
    "scripts": {
        "post-autoload-dump": [
            "@composer normalize"
        ],
        "lint": "php-cs-fixer fix --ansi --verbose --diff --using-cache=yes",
        "sniff": "php-cs-fixer fix --ansi --verbose --dry-run --diff"
    }
}
